{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "@constants": ["src/constants.ts"],
      "@types": ["src/types.ts"],
      "@root/*": ["src/*"]
    }
  },
  "exclude": ["node_modules/*", "**/node_modules/*"]
}
